{
    "version": "1.0.0",
    "manifest_version": 2,
    "name": "Favorite Matrix Client",
    "description": "Select your favorite Matrix web client for matrix.to",
    "author": "Martin Giger",
    "options_ui": {
        "page": "options.html"
    },
    "permissions": [
        "storage",
        "*://matrix.to/*"
    ],
    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    },
    "background": {
        "scripts": [ "background.js" ]
    },
    "browser_specific_settings": {
        "gecko": {
            "strict_min_version": "86.0"
        }
    }
}
